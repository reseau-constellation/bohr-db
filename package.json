{
  "name": "@constl/bohr-db",
  "version": "2.0.0",
  "description": "Type-safe databases for orbit-db.",
  "author": "Julien Jean Malard-Adam",
  "keywords": [
    "Constellation",
    "pair Ã  pair"
  ],
  "license": "AGPL-3.0-or-later",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": "./dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "compile": "pnpm clean && pnpm tspc -p tsconfig.json",
    "compile:prod": "pnpm updateVersion && pnpm format && pnpm clean && pnpm tspc -p tsconfig.build.json",
    "test": "pnpm compile && pnpm aegir test -t node --cov -- --exit",
    "format": "pnpm prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\" && pnpm eslint",
    "release": "pnpm test && pnpm compile:prod && (git commit -a -m 'version' || true) && pnpm publish",
    "updateVersion": "pnpm genversion  --es6 --semi src/version.ts"
  },
  "dependencies": {
    "@constl/multi-db": "^0.1.0",
    "@orbitdb/core": "^3.0.2",
    "@orbitdb/core-types": "^1.2.1",
    "@orbitdb/feed-db": "^1.3.0",
    "@orbitdb/nested-db": "^2.0.4",
    "@orbitdb/ordered-keyvalue-db": "^1.3.5",
    "@orbitdb/set-db": "^2.0.1",
    "ajv": "^8.17.1",
    "events": "^3.3.0",
    "helia": "^5.5.1",
    "multiformats": "^13.4.2",
    "ts-deepmerge": "^7.0.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@chainsafe/libp2p-gossipsub": "^14.1.2",
    "@chainsafe/libp2p-noise": "^16.1.5",
    "@chainsafe/libp2p-yamux": "^7.0.4",
    "@eslint/js": "^9.39.2",
    "@helia/block-brokers": "^4.2.4",
    "@libp2p/circuit-relay-v2": "^3.2.24",
    "@libp2p/identify": "^3.0.39",
    "@libp2p/webrtc": "^5.2.24",
    "@libp2p/websockets": "^9.2.19",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "aegir": "^47.0.25",
    "blockstore-core": "^5.0.4",
    "blockstore-level": "^2.0.5",
    "browserify-fs": "^1.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "genversion": "^3.2.0",
    "libp2p": "^2.10.0",
    "mocha": "^11.7.5",
    "os-browserify": "^0.3.0",
    "prettier": "^3.7.4",
    "process": "^0.11.10",
    "rimraf": "^6.1.2",
    "ts-patch": "^3.3.0",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.50.1",
    "typescript-transform-paths": "^3.5.5"
  },
  "resolutions": {
    "iso-constants": "git+https://github.com/inverted-capital/iso-constants.git#patch-1"
  },
  "overrides": {
    "iso-constants": {
      ".": "git+https://github.com/inverted-capital/iso-constants.git#patch-1"
    }
  },
  "jest": {
    "transform": {
      "(.*).ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "preset": "ts-jest/presets/default-esm",
    "moduleNameMapper": {
      "^@/(.*).js$": "<rootDir>/src/$1",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/*.test.ts"
    ],
    "testEnvironment": "node"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@ipshipyard/node-datachannel",
      "classic-level",
      "esbuild",
      "node-datachannel"
    ]
  }
}
